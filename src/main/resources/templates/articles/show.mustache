{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
        <tr>
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>

<button type="button" class="btn btn-primary" onclick="location.href='/articles'">
    Go to List
</button>
<button type="button" class="btn btn-primary" onclick="location.href='/articles/{{article.id}}/edit'">
    Edit
</button>
<button type="button" class="btn btn-primary" onclick="location.href='/articles/{{article.id}}/delete'">
    Delete
</button>

{{>layouts/footer}}